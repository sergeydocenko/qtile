super + Return
    alacritty --config-file ~/.config/qtile/alacritty/alacritty.toml
        
super + space
    rofi -show drun -show-icons

super + shift + @space
    rofi -show run -show-icons

super + w
    rofi -show window -show-icons

super + v
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

super + a
    firefox

super + ctrl + a
    firefox --private-window

Print
    flameshot gui

super + g; t
    notify-send -a "SXHKD" "Game" "Let's play Terraria"; \
    TERM=XTERM ~/games/terraria/game/Terraria.bin.x86_64

super + t; r
    { notify-send -a "SXHKD" "Redshift" "On"; redshift -O 5000, \
      notify-send -a "SXHKD" "Redshift" "Off"; redshift -x }

super + BackSpace
    notify-send -a "SXHKD" "Power" "DPMS Off"; sleep 3s; xset dpms force off

button2
    alacritty